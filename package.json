{
  "name": "@plumise/core",
  "version": "0.1.0",
  "description": "TypeScript SDK for interacting with the Plumise AI-native blockchain",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["plumise", "blockchain", "ai", "sdk", "viem", "ethereum", "plm"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikusnuz/plumise-core"
  },
  "peerDependencies": {
    "viem": "^2.0.0"
  },
  "devDependencies": {
    "tsup": "^8.4.0",
    "typescript": "^5.7.0",
    "viem": "^2.45.0"
  }
}
